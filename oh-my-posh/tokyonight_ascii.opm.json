{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "foreground": "black",
          "style": "plain",
          "template": "\u250c",
          "type": "text"
        },
        {
          "background": "black",
          "foreground": "cyan",
          "leading_diamond": "\u2500\u2500[ ",
          "style": "diamond",
          "template": "\uf313",
          "trailing_diamond": " ]",
          "type": "text"
        },
        {
          "background": "black",
          "foreground": "cyan",
          "leading_diamond": "\u2500\u2500[ ",
          "style": "diamond",
          "template": "{{ .Path }}",
          "trailing_diamond": " ]",
          "properties": {
            "style": "full"
          },
          "type": "path"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "newline": false,
      "segments": [
        {
          "type": "battery",
          "leading_diamond": "[ ",
          "style": "diamond",
          "trailing_diamond": " ]",
          "background": "black",
          "foreground": "cyan",
          "background_templates": [
            "{{if eq \"Charging\" .State.String}}#40c4ff{{end}}",
            "{{if eq \"Discharging\" .State.String}}#ff5722{{end}}",
            "{{if eq \"Full\" .State.String}}#4caf50{{end}}"
          ],
          "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}\uF295 ",
          "properties": {
            "discharging_icon": "\uE231 ",
            "charging_icon": "\uE234 ",
            "charged_icon": "\uE22F "
          }
        },
        {
          "background": "black",
          "foreground": "cyan",
          "leading_diamond": "\u2500\u2500[ ",
          "properties": {
            "time_format": "15:04:05"
          },
          "style": "diamond",
          "template": "{{ .CurrentDate | date .Format }}",
          "trailing_diamond": " ]",
          "type": "time"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "black",
          "style": "plain",
          "template": "\u2514",
          "type": "text"
        },
        {
          "background": "black",
          "foreground": "cyan",
          "leading_diamond": "\u2500\u2500[ ",
          "style": "diamond",
          "template": "<,transparent> {{ .UserName }} </><black,transparent>@</><,transparent> {{ .HostName }} </>",
          "trailing_diamond": " ]",
          "type": "text"
        },
        {
          "foreground": "cyan",
          "style": "plain",
          "template": "<black>\u2500\u2500</>\u276f\u276f",
          "type": "text"
        }
      ]
    }
  ],
  "final_space": true,
  "version": 2,
  "transient_prompt": {
    "background": "transparent",
    "foreground": "cyan",
    "template": "\u276f\u276f "
  }
}
