{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "filler": "<black,transparent>\u2500</>",
      "segments": [
        {
          "foreground": "black",
          "style": "plain",
          "template": "\u250c",
          "type": "text"
        },
        {
          "background": "black",
          "foreground": "cyan",
          "leading_diamond": "\u2500\u2500[ ",
          "style": "diamond",
          "template": "<,transparent>\uf313</>",
          "trailing_diamond": " ]",
          "type": "text"
        },
        {
          "background": "black",
          "foreground": "cyan",
          "leading_diamond": "\u2500\u2500[ ",
          "style": "diamond",
          "template": "<,transparent>{{ .Path }}</>",
          "trailing_diamond": " ]",
          "properties": {
            "style": "full"
          },
          "type": "path"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "newline": false,
      "filler": "<black,transparent>\u2500</>",
      "segments": [
        {
          "type": "battery",
          "leading_diamond": "[ ",
          "style": "diamond",
          "trailing_diamond": " ]\u2500\u2500",
          "background": "black",
          "foreground": "cyan",
          "foreground_templates": [
            "{{if eq \"Charging\" .State.String}}green{{end}}",
            "{{if eq \"Discharging\" .State.String}}red{{end}}",
            "{{if eq \"Full\" .State.String}}cyan{{end}}"
          ],
          "template": "<,transparent>{{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}\uF295</>",
          "properties": {
            "discharging_icon": "~ ",
            "charging_icon": "++ ",
            "charged_icon": "= "
          }
        },
        {
          "background": "black",
          "foreground": "cyan",
          "leading_diamond": "[ ",
          "properties": {
            "time_format": "15:04:05"
          },
          "style": "diamond",
          "template": "<,transparent>{{ .CurrentDate | date .Format }}</>",
          "trailing_diamond": " ]",
          "type": "time"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "black",
          "style": "plain",
          "template": "\u2514",
          "type": "text"
        },
        {
          "background": "black",
          "foreground": "cyan",
          "leading_diamond": "\u2500\u2500[ ",
          "style": "diamond",
          "template": "<,transparent>{{ .UserName }}</><black,transparent>@</><,transparent>{{ .HostName }}</>",
          "trailing_diamond": " ]",
          "type": "text"
        },
        {
          "foreground": "cyan",
          "style": "plain",
          "template": "<black>\u2500\u2500</>\u276f\u276f",
          "type": "text"
        }
      ]
    }
  ],
  "final_space": true,
  "version": 2,
  "transient_prompt": {
    "background": "transparent",
    "foreground": "cyan",
    "template": "\u276f\u276f "
  }
}
